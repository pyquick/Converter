QWidget {
    background-color: #f5f5f5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
    color: #2c3e50;
}

QLabel {
    color: #2c3e50;
    font-size: 14px;
    background: transparent;
}

QPushButton {
    background-color: #3498db;
    border: none;
    color: white;
    padding: 16px 35px;
    text-align: center;
    font-size: 15px;
    margin: 8px 0;
    border-radius: 16px;
    font-weight: 600;
    min-width: 180px;
}

QPushButton:hover {
    background-color: #2980b9;
}

QPushButton:pressed {
    background-color: #21618c;
}

/* Group Boxes */
QGroupBox {
    font-size: 16px;
    font-weight: 600;
    color: #2c3e50;
    border: 2px solid #bdc3c7;
    border-radius: 20px;
    margin-top: 12px;
    padding-top: 15px;
    background-color: #ffffff;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 8px 0 8px;
    background-color: #ffffff;
    color: #2c3e50;
}

#image_group {
    border-color: #3498db;
}

#image_group::title {
    color: #3498db;
}

#archive_group {
    border-color: #95a5a6;
}

#archive_group::title {
    color: #7f8c8d;
}

/* Main Title */
#title_label {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 25px;
    color: #2c3e50;
    text-align: center;
    background-color: transparent;
}

/* Description Labels */
#description_label {
    color: #7f8c8d;
    font-size: 12px;
    font-style: italic;
    margin-top: 8px;
    margin-bottom: 5px;
    line-height: 1.4;
    background: transparent;
}

/* Button Specific Styles */
#button_app {
    background-color: #3498db;
    border-radius: 25px;
    font-size: 15px;
    font-weight: 600;
}

#button_app:hover {
    background-color: #2980b9;
}

#button_app:pressed {
    background-color: #21618c;
}

#button_zip {
    background-color: #95a5a6;
    border-radius: 25px;
    font-size: 15px;
    font-weight: 600;
}

#button_zip:hover {
    background-color: #7f8c8d;
}

#button_zip:pressed {
    background-color: #6c7b7d;
}

/* Settings Button */
#settings_button {
    background-color: #34495e;
    border: none;
    color: white;
    padding: 10px 20px;
    text-align: center;
    font-size: 14px;
    margin: 8px 0;
    border-radius: 16px;
    font-weight: 600;
    min-width: 120px;
}

#settings_button QLabel {
    background: transparent;
    color: white;
}

#settings_button:hover {
    background-color: #2c3e50;
}

#settings_button:pressed {
    background-color: #1a252f;
}