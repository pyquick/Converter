QWidget {
    background-color: #1e1e1e;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
    color: #ffffff;
}

QLabel {
    color: #ffffff;
    font-size: 14px;
    background: transparent;
}

QPushButton {
    background-color: #0078d4;
    border: none;
    color: white;
    padding: 12px 24px;
    text-align: center;
    font-size: 15px;
    margin: 8px 0;
    border-radius: 25px;
    font-weight: 600;
    min-width: 180px;
}

QPushButton:hover {
    background-color: #106ebe;
}

QPushButton:pressed {
    background-color: #005a9e;
}

/* Group Boxes */
QGroupBox {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    border: 2px solid #404040;
    border-radius: 20px;
    margin-top: 12px;
    padding-top: 15px;
    background-color: #2d2d2d;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 8px 0 8px;
    background-color: #2d2d2d;
    color: #ffffff;
}

#image_group {
    border-color: #0078d4;
}

#image_group::title {
    color: #0078d4;
}

#archive_group {
    border-color: #6b6b6b;
}

#archive_group::title {
    color: #9b9b9b;
}

/* Main Title */
#title_label {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 25px;
    color: #ffffff;
    text-align: center;
    background-color: transparent;
}

/* Description Labels */
#description_label {
    color: #b3b3b3;
    font-size: 12px;
    font-style: italic;
    margin-top: 8px;
    margin-bottom: 5px;
    line-height: 1.4;
    background: transparent;
}

/* Button Specific Styles */
#button_app {
    background-color: #0078d4;
    border-radius: 25px;
    font-size: 15px;
    font-weight: 600;
}

#button_app:hover {
    background-color: #106ebe;
}

#button_app:pressed {
    background-color: #005a9e;
}

#button_zip {
    background-color: #6b6b6b;
    border-radius: 25px;
    font-size: 15px;
    font-weight: 600;
}

#button_zip:hover {
    background-color: #5a5a5a;
}

#button_zip:pressed {
    background-color: #4a4a4a;
}

/* Settings Button */
#settings_button {
    background-color: #484848;
    border: none;
    color: white;
    padding: 10px 20px;
    text-align: center;
    font-size: 14px;
    margin: 8px 0;
    border-radius: 16px;
    font-weight: 600;
    min-width: 120px;
}

#settings_button QLabel {
    background: transparent;
    color: white;
}

#settings_button:hover {
    background-color: #5a5a5a;
}

#settings_button:pressed {
    background-color: #3a3a3a;
}